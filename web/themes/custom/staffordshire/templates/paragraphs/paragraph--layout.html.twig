{% extends 'paragraph.html.twig' %}
{% block content %}
{% set layout = paragraph.field_layout.value %}
{% set gutter = paragraph.field_gutter_size.value %}
<div class="layout">
    <div class="container">
      <div class="item-grid">
        <h2>{{ content.field_title.0 }}</h2>
        <div class="body-text">{{ content.field_body }}</div>
        <div class="clearfix grid normal {{layout}}">
            {{content.field_items}}
        </div>
      </div>
  </div>
</div>
{% endblock %}